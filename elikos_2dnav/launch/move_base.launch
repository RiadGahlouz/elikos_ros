<launch>
  <master auto="start"/>

  <!--- Run AMCL -->
  <include file="$(find amcl)/examples/amcl_omni.launch" />

  <node pkg="tf" type="static_transform_publisher" name="fcu_to_cam" args="0.2 0.5 0 0 0 0 /fcu /camera_link 10"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find elikos_2dnav)/launch/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find elikos_2dnav)/launch/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find elikos_2dnav)/launch/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find elikos_2dnav)/launch/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find elikos_2dnav)/launch/base_local_planner_params.yaml" command="load" />
  </node>
</launch>